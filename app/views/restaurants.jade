div(ng-include="'views/partials/header.html'")

div#restaurants-list

  h1 Restaurants List

  .form-group
    .input-group
      .input-group-addon
        i.fa.fa-search
      input.form-control(type='text', placeholder='Search', ng-model='search')

  table.table
    thead
      tr
        th
          a(ng-click="orderBy = 'title'; sortReverse = !sortReverse") name
            span &nbsp;
            span.fa.fa-caret-down(ng-show="orderBy == 'title' && !sortReverse")
            span.fa.fa-caret-up(ng-show="orderBy == 'title' && sortReverse")

        th action

    tbody
      tr(ng-repeat="restaurant in restaurants | orderBy:orderBy:sortReverse | filter:search")
        td {{ restaurant.title }}
        td
          button.btn.btn-primary(ng-click="activate(restaurant)") Activer
